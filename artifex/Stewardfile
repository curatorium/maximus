claude() {
	apt libncurses5
	ext https://claude.ai/install.sh
	defer <<<"cp /root/.local/bin/claude /usr/local/bin/claude"
}

github() {
	apt gh
	apt git
	key github https://cli.github.com/packages/githubcli-archive-keyring.gpg
	src github https://cli.github.com/packages stable main
	apt openssh-client
}

docker() {
	key docker https://download.docker.com/linux/ubuntu/gpg
	src docker https://download.docker.com/linux/debian $VERSION_CODENAME stable
	apt docker-ce-cli
	apt docker-compose-plugin
	apt docker-buildx-plugin
}

utils() {
	apt bash-completion
	apt dnsutils
	apt fzf
	apt inetutils-ping
	apt iproute2
	apt ipset
	apt iptables
	apt jq
	apt less
	apt man-db
	apt nano
	apt netcat-traditional
	apt net-tools
	apt procps
	apt readline-common
	apt ripgrep
	apt socat
	apt sudo
	apt telnet
	apt unzip
	apt whois
}
